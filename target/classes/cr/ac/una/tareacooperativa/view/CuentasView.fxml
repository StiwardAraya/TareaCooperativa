<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.tareacooperativa.controller.CuentasController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <top>
        <VBox maxHeight="400.0" maxWidth="1.7976931348623157E308" styleClass="vtncuentas-vbox" BorderPane.alignment="CENTER">
            <children>
                <Label maxHeight="1.7976931348623157E308" styleClass="vtncuentas-titulo" text="Cuentas" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="vtncuentas-hbox--form_folio" VBox.vgrow="ALWAYS">
                    <children>
                        <MFXTextField floatMode="BORDER" floatingText="Folio" maxHeight="1.7976931348623157E308" maxWidth="120.0" styleClass="vtncuentas-txtfolio" HBox.hgrow="ALWAYS" />
                        <MFXButton maxHeight="1.7976931348623157E308" maxWidth="100.0" styleClass="vtncuentas-boton" text="Buscar" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="vtncuentas-hbox--listas" BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="listViewCuentas" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onDragDetected="#OnDragDetectedCuentas" onDragDropped="#OnDragDroppedCuentas" onDragOver="#OnDragOverCuentas" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <ImageView fitHeight="34.0" fitWidth="92.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/cambio.png" />
                    </image>
                </ImageView>
                <ListView fx:id="listViewCuentasCliente" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onDragDetected="#OnDragDetectedCuentasCliente" onDragDropped="#OnDragDroppedCuentasCliente" onDragOver="#OnDragOverCuentasCliente" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox maxHeight="300.0" maxWidth="1.7976931348623157E308" styleClass="vtncuentas-hbox--botones" BorderPane.alignment="CENTER">
            <children>
                <MFXButton maxHeight="1.7976931348623157E308" maxWidth="300.0" styleClass="vtncuentas-boton" text="Guardar" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </MFXButton>
                <MFXButton maxHeight="1.7976931348623157E308" maxWidth="300.0" onAction="#onActionCerrarButton" styleClass="vtncuentas-boton--cerrar" text="Cerrar" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </MFXButton>
            </children>
        </HBox>
    </bottom>
</BorderPane>
